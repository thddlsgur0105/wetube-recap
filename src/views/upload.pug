extends base.pug

block content
    div.upload__container
        div.upload__video
            video#preview
            button#actionBtn.social__btn Start Recording 
        if errorMessage
            span=errorMessage 
        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video File 
            input(type="file", accept="video/*", id="video", required, name="video") 
            label(for="thumb") Thumbnail File 
            input(type="file", accept="image/*", id="thumb", required, name="thumb") 
            input(name="title", type="text", placeholder="Title", required, maxlength=80)
            input(name="description", type="text", placeholder="Description", required, minlength=20)
            input(name="hashtags", type="text", placeholder="Hashtags, seperated by comma.", required)
            input(type="submit", value="Upload") 
block scripts 
    script(src="/assets/js/recorder.js") 