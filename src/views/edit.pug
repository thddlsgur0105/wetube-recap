extends base.pug

block content 
    h4 Update Video 
    form(method="POST")
        input(name="title", type="text", placeholder="Video Title", value=video.title, required)
        input(name="description", type="text", placeholder="Description", required, minlength=20, value=video.description)
        input(name="hashtags", type="text", placeholder="Hashtags, seperated by comma.", required, value=video.hashtags.join())
        input(type="submit", value="Save") 