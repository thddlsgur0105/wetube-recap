extends base.pug

block content 
    video.video-player(src=`/${video.fileUrl}`, controls) 
    div
        button#play Play 
        button#mute Mute 
        span#time 00:00/00:00
        input#volume(type="range", step="0.1", min="0", max="1")
    //-
        div 
            p=video.description
            small=video.createdAt
        div 
            small Uploaded by 
                a(href=`/users/${video.owner._id}`)=video.owner.name
        if String(loggedInUser._id) === String(video.owner._id)
            a(href=`${video.id}/edit`) Edit &rarr; 
            br
            a(href=`${video.id}/delete`) Delete &rarr; 
    
block scripts 
    script(src="/assets/js/videoPlayer.js") 